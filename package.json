        "jest-svg-transformer": "^1.0.0",
        "jest-transform-stub": "^2.0.0",
        "postcss": "^8.4.38",
        "prettier": "^3.4.2",
        "tailwindcss": "^3.4.4",
        "ts-jest": "^29.2.5",
        "typescript": "^5.6.3",
        "vite": "^5.2.0",
        "vitest": "^2.1.3"
    },
    "jest": {
        "transform": {
            "^.+\\.(js|jsx|ts|tsx)$": "babel-jest",
            "^.+\\.(gif|ttf|eot|svg|png)$": "jest-transform-stub",
            "\\.(css|less)$": "jest-transform-stub"
        },
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": [
            "<rootDir>/setup-tests.ts"
        ],
        "moduleFileExtensions": [
            "js",
            "jsx",
            "ts",
            "tsx",
            "json",
            "node"
        ],
        "collectCoverageFrom": [
            "src/tests/**/*.{js,jsx,ts,tsx}",
            "!**/node_modules/**"
        ],
        "coverageReporters": [
            "json",
            "text",
            "lcov",
            "clover"
        ],
        "collectCoverage": true,
        "moduleNameMapper": {
            "^@/(.*)$": "<rootDir>/src/$1",
            "^@/assets/images/.*\\.(gif|ttf|eot|svg|png)$": "jest-transform-stub",
            "\\.(css|less)$": "identity-obj-proxy"
        },
        "transformIgnorePatterns": [
            "/node_modules/(?!(axios)/)"
        ],
        "globals": {
            "ts-jest": {
                "useESM": true
            }
        },
        "reporters": [
            "default",
            [
                "jest-html-reporter",
                {
                    "pageTitle": "Relat√≥rio de Testes Frontend - Wallet SaaS",
                    "outputPath": "./test-report.html",
                    "includeFailureMsg": true,
                    "includeConsoleLog": true,
                    "theme": "defaultTheme"
                }
            ]
        ]
    }
}
